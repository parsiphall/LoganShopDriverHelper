<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize"
        tools:context=".fragments.TotalDayFragment">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/month_and_year"
                style="@style/dayAndMonthLinearLayout">
            <TextView
                    android:id="@+id/month_month"
                    style="@style/dayAndMonthTextView"/>
            <TextView
                    android:id="@+id/month_year"
                    style="@style/dayAndMonthTextView"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/month_family"
                style="@style/dayAndMonthLinearLayout"
                android:layout_below="@id/month_and_year">
            <TextView
                    android:id="@+id/month_family_textView"
                    style="@style/dayAndMonthTextViewWide"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/month_total_shifts_value"
                style="@style/dayAndMonthLinearLayout"
                android:layout_below="@id/month_family">
            <TextView
                    style="@style/dayAndMonthTextView"
                    android:text="@string/shiftsValue"/>
            <TextView
                    android:id="@+id/month_total_shifts_value_textView"
                    style="@style/dayAndMonthTextView"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/month_total_delivery_value"
                style="@style/dayAndMonthLinearLayout"
                android:layout_below="@id/month_total_shifts_value">
            <TextView
                    style="@style/dayAndMonthTextView"
                    android:text="@string/deliveryValue"/>
            <TextView
                    android:id="@+id/month_total_delivery_value_textView"
                    style="@style/dayAndMonthTextView"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/month_total_money"
                style="@style/dayAndMonthLinearLayout"
                android:layout_below="@id/month_total_delivery_value">
            <TextView
                    style="@style/dayAndMonthTextView"
                    android:text="@string/totalMoney"/>
            <TextView
                    android:id="@+id/month_total_money_textView"
                    style="@style/dayAndMonthTextView"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/month_logan_divider"
                style="@style/dayAndMonthLinearLayout"
                android:layout_below="@id/month_total_money">
            <TextView
                    style="@style/dayAndMonthTextViewWide"
                    android:text="@string/logan_divider"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/month_logan_money"
                style="@style/dayAndMonthLinearLayout"
                android:layout_below="@id/month_logan_divider">
            <TextView
                    style="@style/dayAndMonthTextView"
                    android:text="@string/money"/>
            <TextView
                    android:id="@+id/month_logan_money_textView"
                    style="@style/dayAndMonthTextView"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/month_logan_cash"
                style="@style/dayAndMonthLinearLayout"
                android:layout_below="@id/month_logan_money">
            <TextView
                    style="@style/dayAndMonthTextView"
                    android:text="@string/cash"/>
            <TextView
                    android:id="@+id/month_logan_cash_textView"
                    style="@style/dayAndMonthTextView"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/month_logan_card"
                style="@style/dayAndMonthLinearLayout"
                android:layout_below="@id/month_logan_cash">
            <TextView
                    style="@style/dayAndMonthTextView"
                    android:text="@string/card"/>
            <TextView
                    android:id="@+id/month_logan_card_textView"
                    style="@style/dayAndMonthTextView"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/month_vesta_divider"
                style="@style/dayAndMonthLinearLayout"
                android:layout_below="@id/month_logan_card">
            <TextView
                    style="@style/dayAndMonthTextViewWide"
                    android:text="@string/vesta_divider"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/month_vesta_money"
                style="@style/dayAndMonthLinearLayout"
                android:layout_below="@id/month_vesta_divider">
            <TextView
                    style="@style/dayAndMonthTextView"
                    android:text="@string/money"/>
            <TextView
                    android:id="@+id/month_vesta_money_textView"
                    style="@style/dayAndMonthTextView"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/month_vesta_cash"
                style="@style/dayAndMonthLinearLayout"
                android:layout_below="@id/month_vesta_money">
            <TextView
                    style="@style/dayAndMonthTextView"
                    android:text="@string/cash"/>
            <TextView
                    android:id="@+id/month_vesta_cash_textView"
                    style="@style/dayAndMonthTextView"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/month_vesta_card"
                style="@style/dayAndMonthLinearLayout"
                android:layout_below="@id/month_vesta_cash">
            <TextView
                    style="@style/dayAndMonthTextView"
                    android:text="@string/card"/>
            <TextView
                    android:id="@+id/month_vesta_card_textView"
                    style="@style/dayAndMonthTextView"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/month_salary"
                style="@style/dayAndMonthLinearLayout"
                android:layout_below="@id/month_vesta_card">
            <TextView
                    style="@style/dayAndMonthTextView"
                    android:text="@string/salary"/>
            <TextView
                    android:id="@+id/month_salary_textView"
                    style="@style/dayAndMonthTextView"/>
        </LinearLayout>
        <LinearLayout
                style="@style/shiftLinearLayout"
                android:gravity="center_horizontal"
                android:id="@+id/shift_button"
                android:layout_below="@id/month_salary">
            <Button
                    android:id="@+id/day_write"
                    android:layout_marginTop="10dp"
                    android:text="@string/writeTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>