<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="4dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
        <TextView
                android:id="@+id/total_item_dayOrMonth"
                style="@style/totalItemTextView"
                android:layout_weight="0.5"
                android:textColor="#51361a"/>
        <TextView
                android:id="@+id/total_item_date"
                style="@style/totalItemTextView"
                android:layout_weight="3"/>
        <TextView
                android:id="@+id/total_item_salary"
                style="@style/totalItemTextView"/>
        <TextView
                android:id="@+id/total_item_dist"
                style="@style/totalItemTextView"/>
        <ImageButton
                android:id="@+id/total_delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="0"
                android:src="@android:drawable/ic_menu_delete"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>